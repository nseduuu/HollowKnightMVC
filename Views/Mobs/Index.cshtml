<!--Namespace da classe de Modelo para esta view-->
@model IEnumerable<HollowKnightMVC.Models.MobsViewModel>
<!--Inclua os TempData para Sucesso e Erro aqui, conforme exemplo na view de Autenticação-->
@{
    ViewBag.Title = "Boss";
}<!--Título da página para o navegador-->
<h2>Relação de Bosses</h2>
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
<!--Título da página-->
<p>
  <!--Links apontando para views na mesma pasta-->
    @Html.ActionLink("Criar Novo Boss", "Create")
</p>

<table class="table">
  <tr>
    <!--Títulos das colunas da tabela-->
    <th>@Html.DisplayNameFor(model => model.Id)</th>
    <th>@Html.DisplayNameFor(model => model.Nome)</th>
    <th>@Html.DisplayNameFor(model => model.PontosVida)</th>
    <th>@Html.DisplayNameFor(model => model.Forca)</th>
    <th>@Html.DisplayNameFor(model => model.Dificuldade)</th>
    <th>@Html.DisplayNameFor(model => model.Localizacao)</th>
    <th>@Html.DisplayNameFor(model => model.Lore)</th>
    <th>@Html.DisplayNameFor(model => model.Foto)</th>
    <th></th>
  </tr>
  <!--Looping para escrever os dados na tabela-->
    @foreach (var item in Model)
    {
      <tr>
        <td>@Html.DisplayFor(modelItem => item.Id)</td>
        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
        <td>@Html.DisplayFor(modelItem => item.PontosVida)</td>
        <td>@Html.DisplayFor(modelItem => item.Forca)</td>
        <td>@Html.DisplayFor(modelItem => item.Dificuldade )</td>
        <td>@Html.DisplayFor(modelItem => item.Localizacao)</td>
        <td>@Html.DisplayFor(modelItem => item.Lore)</td>
        <td>@Html.DisplayFor(modelItem => item.Foto)</td>
        <td>
          
      @Html.ActionLink("Editar", "Edit", new { id = item.Id } ) |
      @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
      @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new {onclick = "return confirm('Deseja realmente deletar este personagem ?');"}) |
        </td>
      </tr>
    }
</table>
  