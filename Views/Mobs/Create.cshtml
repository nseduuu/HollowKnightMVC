@model HollowKnightMVC.Models.MobsViewModel;
@{
    ViewBag.Title = "Create Mobs";
}
<h2>Criar um Novo Boss</h2>
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-sucess" role="alert">
        @TempData["Mensagem"]</div>
}

<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-error" role="alert">
        @TempData["MensagemErro"]</div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr/>
        <div class="form-group">
            <label class="control-label col-md-2">Nome:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Pontos de vida:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.PontosVida, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Força:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Forca, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Dificuldade:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Dificuldade, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Localização:</label>            
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Localizacao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Lore:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Lore, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group"></div>
            <label class="control-label col-md-2">Categoria:</label>
            <div class="col-md-6">
                 @Html.DropDownListFor(model => model.Categoria, Html.GetEnumSelectList(typeof(HollowKnightMVC.Models.Enuns.CategoriaEnum)),
                    "---Selecione---", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Foto:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Foto, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <br>
        <div class="form-group">
             <div class="col-md-offset-2 col-md-6" >
                <input type="submit" value="Salvar" class="btn btn-primary"/>
             </div>
        </div>
}
<div>
    @Html.ActionLink("Retornar", "Index")
</div>